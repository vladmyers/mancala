<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Exclude Test Sources -->
    <suppress checks="LineLength" files=".*[\\/]src[\\/](test|it)[\\/]"/>
    <suppress checks="ConstantName" files=".*[\\/]src[\\/](test|it)[\\/]"/>
    <suppress checks="HideUtilityClassConstructor" files=".*[\\/]src[\\/](test|it)[\\/]"/>
    <suppress checks="SummaryJavadoc" files=".*[\\/]src[\\/](test|it)[\\/]"/>
    <suppress checks="MissingJavadocType" files=".*[\\/]src[\\/](test|it)[\\/]"/>

    <!-- Exclude Production Sources -->
    <suppress checks="MissingJavadocType" files=".*Application.java"/>
</suppressions>
